<div class="ui form container ">
        <div class="ui   segment">
    <%if current_user.has_role? :Administrador or current_user.has_role? :Super_usuario%>           
          <div class="ui header">
               Editar al usuario <%=@user.first_name%> <%=@user.last_name%>
               <%= notice %>
          </div>
          <form action="/user/<%=@user.id%>/update_password" method="post">
            <div class="two fields">
                <div class="field">
                  <label>Nombres</label>
                  <input  name="user[first_name]" placeholder="Nombre completo" type="text" >
                </div>
                <div class="field">
                  <label>Apellidos</label>
                  <input type="text" name="user[last_name]" placeholder="Apellidos completos" >
                </div>                                 
            </div>
            <div class="two fields">
                <div class="field">
                  <label>Email</label>
                  <input  name="user[email]" placeholder="Correo electronico" type="text" >
                </div>
                <div class="field">
                  <label>Rol del usuario</label>
                   <div class="ui selection dropdown">
                       <input type="hidden" name="user[role]">
                       <i class="dropdown icon"></i>
                       <div class="default text">Roles</div>
                       <div class="menu">
                        <div class="item" value= "Administrador" >Administrador</div>
                        <div class="item" value= "Modificador" >Modificador</div>
                        <div class="item" value= "Empleado" >Empleado</div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="two fields">
                <div class="field">
                  <label>Pais</label>
                  <input  name="user[country]" placeholder="Bolivia" type="text" >
                </div>
                <div class="field">
                  <label>Ciudad</label>
                  <input type="text" name="user[state]" placeholder="Cochabamba" >
                </div>                                 
            </div>
            <div class="two fields">
                <div class="field">
                  <label>Telefono</label>
                  <input  name="user[phone]" placeholder="591 70712345" type="text" >
                </div>
                <div class="field">
                  <label>Fecha de Nacimiento</label>
                  <input type="date" name="user[birthdate]" placeholder="Apellidos completos" >
                </div>                                 
            </div>
            <div class="two fields">
                <div class="field">
                  <label>Tipo de trabajo</label>
                  <div class="ui selection dropdown">
                       <input type="hidden" name="user[work]">
                       <i class="dropdown icon"></i>
                       <div class="default text">Tipo</div>
                       <div class="menu">
                        <div class="item" value= "Hour" >Hour</div>
                        <div class="item" value= "Month" >Month</div>
                        
                    </div>
                    </div>
                </div>
                <div class="field">
                  <label>Cargo</label>
                  <div class="ui selection dropdown">
                       <input type="hidden" name="user[position]">
                       <i class="dropdown icon"></i>
                       <div class="default text">Cargos</div>
                       <div class="menu">
                        <div class="item" value= "Jefe" >Jefe</div>
                        <div class="item" value= "Junior" >Junior</div>
                        
                    </div>
                </div>                                 
            </div>
            </div>
              <div class="two fields">
                <div class="field">
                  <label>Contraseña</label>
                  <i>(Debe tener una letra en mayuscula, minuscula, numemro y caracter especial.Tamaño minimo 6)</i>
                  <input type="password" name="user[password]" placeholder="Contraseña" >
                </div>
                <div class="field">
                  <label>Confirmaticion de contraseña</label>
                  <br>
                  <input name="user[password_confirmation]" placeholder="Confirmacion de contraseña" type="password" >
                </div> 
              </div>                                          
            <div class="ui center aligned basic segment">
              <button type="input" class="ui green button"><i class="ui add icon"></i>Crear usuario</button>
            </div>
            <br> 
          </form>
            <%else%>
              <h1>No deberias estar aqui</h1>   
            <%end%>
        </div>
      </div>

<br>
<br>